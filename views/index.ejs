<%- include("header.ejs") -%>


    <div class="box" id="heading">
        <h1><%= date %></h1>
        <h2>To Do List</h2>
    </div>

    <div class="box">
        <% for(var i = 0; i< toDoItems.length; i++){ %>
            <form action="/delete" method="POST">
                <div class="item">
                    <input name="checkbox" type="checkbox" value="<%= toDoItems[i].description %>" onchange="this.form.submit()"> 
                    <p><%= toDoItems[i].description %></p>
                </div>
            </form>
        <% } %>
        <form action="/" class="class" method="POST">
            <input type="text" name="newTask" placeholder="New Task">
            <button type="submit">+</button>
        </form>
    </div>
<%- include("footer.ejs") -%>