<%- include("header.ejs") -%>


    <div class="box" id="heading">
        <h1><%= date %></h1>
        <h2>Work Items</h2>
    </div>

    <div class="box">
        <% for(var i = 0; i< workItems.length; i++){ %>
            <div class="item">
                <input type="checkbox">
                <p><%= workItems[i] %></p>
            </div>
        <% } %>
        <form action="/work" class="class" method="POST">
            <input type="text" name="newTask" placeholder="New Task">
            <button type="submit">+</button>
        </form>
    </div>
<%- include("footer.ejs") -%>